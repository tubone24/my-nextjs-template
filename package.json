{
  "name": "my-nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --pretty --noEmit",
    "format": "npx prettier --write \"src/**/*.tsx\"",
    "format:check": "npx prettier --write --check \"src/**/*.tsx\"",
