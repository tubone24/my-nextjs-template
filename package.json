{
  "name": "my-nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --pretty --noEmit",
    "format": "npx prettier --write \"src/**/*.tsx\"",
    "format:check": "npx prettier --write --check \"src/**/*.tsx\"",
    "test": "jest",
    "test:us": "jest --updateSnapshot",
    "test:all": "yarn typecheck && yarn format && yarn test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "postinstall": "husky install",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cy:open",
    "test:e2e:ci": "start-server-and-test dev http://localhost:3000 cy:run"
  },
